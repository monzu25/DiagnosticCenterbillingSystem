@model IEnumerable<CityLabAndHospital.Models.Db.Investigations>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn bg-primary" asp-action="Create">Create New</a>
</p>
<table class="table table table-bordered table table-striped">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SlNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TestGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReportGroup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fee)
                </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SlNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TestName" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TestName" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TestName"class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">