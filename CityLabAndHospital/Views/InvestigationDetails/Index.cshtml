@model IEnumerable<CityLabAndHospital.Models.Db.InvestigationDetails>

@{
    Layout = null;
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="width:1500px">
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead >
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VoucherNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SlNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TestGroup)
                </th>
                @*<th>
            @Html.DisplayNameFor(model => model.ReportGroup)
        </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Fee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                @*<th>
            @Html.DisplayNameFor(model => model.Commision)
        </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.TestName)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VoucherNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TestGroup)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.ReportGroup)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Commision)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TestNameNavigation.TestName)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.VoucherNo">Edit</a> |
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.VoucherNo">Details</a> |
                    <a asp-action="Delete" class="btn btn danger" asp-route-id="@item.VoucherNo">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
